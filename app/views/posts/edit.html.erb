<h1>編集画面</h1>
<%= form_for(@post) do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title , class: "book_title"%>
    <h4>本文</h4>
    <%= f.text_area :body, class: "book_body" %>
    <%= f.submit '保存' %>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<% end %>