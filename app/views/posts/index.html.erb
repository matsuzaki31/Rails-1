<h1>Books</h1>
<table>
    <tr>
    <th>Title</th>
    <th>Body</th>
    </tr>
 <% @posts.each do |post| %>
    <tr>
        <td><%=link_to post.title, post_path(post.id), class: "show_#{post.id}" %></td>
        <td><%=link_to post.body, post_path(post.id), class: "show_#{post.id}" %></td><br>
        <td><%= link_to "編集", edit_post_path(post.id) , class: "edit_#{post.id}" %></td>
        <td><%= link_to "削除", destroy_post_path(post.id) , class: "destroy_#{post.id}" , method: :delete , "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
<% end %>
</table>


<h1>New book</h1>

<%= form_for(@post) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title ,class: "book_title" %>

    <h4>Body</h4>
    <%= f.text_area :body ,class: "book_body"%>

    <%= f.submit 'Create Book' %>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<% end %>

